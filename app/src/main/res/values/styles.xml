<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="font_color"
      parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/gray_color</item>
    <item name="android:textSize">18sp</item>
  </style>
  <style name="font_color_white"
      parent="@android:style/TextAppearance">
    <item name="android:textColor">#F3EDED</item>
    <item name="android:textSize">30sp</item>
  </style>
  <style name="font_color_gray"
      parent="@android:style/TextAppearance">
    <item name="android:textColor">#373535</item>
    <item name="android:textSize">30sp</item>
  </style>

  <style name="font_color_red"
      parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/red_color</item>
    <item name="android:textSize">30sp</item>
  </style>

  <style name="font_color_black"
      parent="@android:style/TextAppearance">
    <item name="android:textColor">#050505</item>
    <item name="android:textSize">15sp</item>
  </style>
</resources>
